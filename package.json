  },
  "devDependencies": {
    "@storybook/addon-designs": "^11.1.0",
    "@storybook/addon-links": "^10.1.10",
    "@storybook/react": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.7",
