    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "ui",
    "circuit-and-chisel"
